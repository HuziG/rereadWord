/* components/home/mode/index.wxss */
.container{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #BBBBBB;
}
.mode-title{
  color: #FF3B1D;
  font-weight: 700;
  font-size: 10pt;
}
.change-mode-btn{
  display: inline;
  padding: 5rpx 8rpx;
  border: 1px solid #B5B5B5;
  border-radius: 10em;
  font-size: 9pt;
  color: #B5B5B5;
}
.change-mode-btn:active{
  opacity: .5;
}