/* pages/study-exam/study-exam.wxss */
@import '../../utils/iconfont.wxss';

page{
  background-color: #F6F6F6;
  overflow: hidden;
}
.progress-wrapper{
  position: fixed;
  width: 100%;
  left: 0;
}
.main-container{
  display: flex;
  flex-direction: column;
  padding-bottom: 32rpx;
  box-sizing: border-box;
  font-size: 15pt;
}
.sentence{
  flex: 7;
  justify-content: center;
}
.option-group{
  flex: 5;
  justify-content: space-around;
}
.button-nav-wrapper{
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  height: 95%;
}

.flex-center{
  display: flex;
  align-items: center;
  flex-direction: column;
}

.skip-btn{
  position: absolute;
  right: 15rpx;
  top: 200rpx;
  border-radius: 5px;
  padding: 10rpx 15rpx;
  background-color: #FF5C63;
  color: rgba(255, 255, 255, 1);
  font-size: 11px;
  text-align: center;
  box-shadow: 1px 1px 7px 1px rgba(204, 204, 204, 1);
}

.skip-btn:active{
  opacity: .5;
}

.loading-text{
  text-align: center;
}
.loading-text .loading-title{
  color: #000;
  font-size: 14pt;
  animation: fade .8s infinite linear;
}
.loading-text .loading-des{
  color: #666;
  font-size: 9pt;
  margin-top: 20rpx;
}

@keyframes fade {
  25% {
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
}